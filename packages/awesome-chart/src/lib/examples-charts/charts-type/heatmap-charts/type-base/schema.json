{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Heatmap Base Schema",
  "type": "object",
  "properties": {
    "type": {
      "const": "heatmap"
    },
    "xAxis": {
      "type": "object",
      "properties": {
        "type": { "enum": ["category", "value"] }
      }
    },
    "yAxis": {
      "type": "object",
      "properties": {
        "type": { "enum": ["category", "value"] }
      }
    },
    "visualMap": {
      "type": "object",
      "properties": {
        "min": { "type": "number" },
        "max": { "type": "number" },
        "calculable": { "type": "boolean" }
      }
    }
  },
  "required": ["type", "xAxis", "yAxis", "visualMap"]
}
