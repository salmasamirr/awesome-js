{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Area Chart Base Schema",
  "type": "object",
  "properties": {
    "type": {
      "const": "line",
      "description": "Area charts are line charts with areaStyle."
    },
    "xAxis": {
      "type": "object",
      "description": "X axis configuration"
    },
    "yAxis": {
      "type": "object",
      "description": "Y axis configuration"
    },
    "series": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "const": "line" },
          "areaStyle": { "type": "object" }
        },
        "required": ["type", "areaStyle"]
      }
    }
  },
  "required": ["type", "xAxis", "yAxis", "series"]
}
